# Architecture
BR2_sparc=y

# Build details
BR2_DEFCONFIG="$(CONFIG_DIR)/defconfig"
BR2_CCACHE=y
BR2_CCACHE_DIR="$(PWD)/.buildroot-ccache"

#GCC Optimization
BR2_OPTIMIZE_3=y

# Library
BR2_PREFER_STATIC_LIB=y

# Debugging
BR2_PACKAGE_HOST_GDB=y

# Rootfs and system packages details
BR2_ROOTFS_DEVICE_CREATION_STATIC=y
BR2_ROOTFS_OVERLAY="$(BR2_EXTERNAL)/board/rootfs_overlay"
BR2_TARGET_ROOTFS_INITRAMFS=y
BR2_PACKAGE_HOST_GENEXT2FS=y
# BR2_TARGET_ROOTFS_TAR is not set
BR2_PACKAGE_HOST_E2FSPROGS=y
BR2_LINUX_KERNEL_VMLINUX=y
BR2_PACKAGE_DHRYSTONE=y
BR2_PACKAGE_STRACE=y
BR2_PACKAGE_WHETSTONE=y


# Linux Kernel
BR2_LINUX_KERNEL=y
BR2_LINUX_KERNEL_CUSTOM_LOCAL=y
BR2_LINUX_KERNEL_CUSTOM_LOCAL_PATH="$(BR2_EXTERNAL)/../Ajit_linux_3.16.1"
BR2_LINUX_KERNEL_USE_CUSTOM_CONFIG=y
BR2_LINUX_KERNEL_CUSTOM_CONFIG_FILE="$(BR2_EXTERNAL)/board/Ajit_minimal_linux_kernel.config"
