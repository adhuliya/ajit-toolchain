
/*========================================================*/
/*                                                        */
/* Linker script for Sparc simulator 	                  */
/*                                                        */
/*========================================================*/

ENTRY(_start)
__DYNAMIC = 0;
SECTIONS
{
	. = 0x00000000;
	.text ALIGN(4) : {  *  (.text) * (.text.*) }
	. = 0x40000000;
	.rodata ALIGN(4) : { * (.rodata) * (.rodata.*)  }
	.data   ALIGN(4) : { * (.data) * (.data.*) *(.bss) }
}
