#COMPILATION_FLAGS=' -g -DSW -Wall -DDEBUG -DGDB_DBG '
#COMPILATION_FLAGS=' -O3 -DSW -Wall -DUSE_NEW_TLB'
Export('COMPILATION_FLAGS')



